<Macro mediawiki $host>
	<Directory "/var/www/$host/">
		Options -Indexes
		<Files "wiki">
			ForceType application/x-httpd-php
			Allow from all
		</Files>
	</Directory>

	<Directory "/var/www/$host/images/">
		# No php execution in the upload area
		php_admin_flag engine off
	</Directory>
</Macro>
