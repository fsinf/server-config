<Macro ssl-fsinf $hostname>
	SSLEngine on

	SSLCertificateFile /etc/ssl/public/$hostname.pem
	SSLCertificateKeyFile /etc/ssl/private/$hostname.key
	SSLCACertificateFile /etc/ssl/certs/fsinf_at.pem

    # SSL hardening
	SSLProtocol all -SSLv2 -SSLv3
    SSLHonorCipherOrder On
    SSLCompression off
    SSLCipherSuite 'ECDH:DH:!AES128:!CAMELLIA128:!3DES:!MD5:!RC4:!aNULL:!EXPORT:!LOW:!MEDIUM'

	SetEnvIf User-Agent ".*MSIE.*" nokeepalive ssl-unclean-shutdown
	Header set Strict-Transport-Security "max-age=16070400; includeSubDomains"
</Macro>
